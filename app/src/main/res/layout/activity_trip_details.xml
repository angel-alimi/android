<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/detailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tripname"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detailDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textSize="18dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/detailDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dates"
        android:textSize="18dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/detailType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type"
        android:textSize="18dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvdetailsTravelers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvdetailsPassport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvdetailsBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Trip"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Trip"
        android:background="#ff4444"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp" />

</LinearLayout>
